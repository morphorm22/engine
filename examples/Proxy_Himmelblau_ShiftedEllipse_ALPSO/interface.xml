<?xml version="1.0"?>

<include filename="defines.xml"/>

<Performer> 
  <Name>PlatoMain</Name>
  <Code>Plato_Main</Code> <!---EXECUTABLE NAME-->
  <PerformerID>0</PerformerID>
</Performer> 

<Performer> 
  <For var="I" in="Comms">
  <Name>Proxy_{I}</Name>
  </For>
  <Code>ProxyBCPSO</Code> <!---EXECUTABLE NAME-->
  <PerformerID>1</PerformerID>
</Performer> 

<!---DEFINE OWNERS AND USERS OF SHARED DATA-->

<For var="I" in="Comms">
<For var="J" in="Evals">
<SharedData>
  <Name>ObjFuncValue {I*NumEvals+J}</Name>
  <Type>Scalar</Type>
  <Layout>Global</Layout>
  <Size>1</Size>
  <OwnerName>Proxy_{I}</OwnerName>
  <UserName>PlatoMain</UserName>
</SharedData>
</For>
</For>

<For var="I" in="Comms">
<For var="J" in="Evals">
<SharedData>
  <Name>ConstraintValue {I*NumEvals+J}</Name>
  <Type>Scalar</Type>
  <Layout>Global</Layout>
  <Size>1</Size>
  <OwnerName>Proxy_{I}</OwnerName>
  <UserName>PlatoMain</UserName>
</SharedData>
</For>
</For>

<For var="I" in="Comms">
<For var="J" in="Evals">
<SharedData>
  <Name>Control {I*NumEvals+J}</Name>
  <Type>Scalar</Type>
  <Layout>Global</Layout>
  <Size>2</Size>
  <OwnerName>PlatoMain</OwnerName>
  <UserName>PlatoMain</UserName>
  <UserName>Proxy_{I}</UserName>
</SharedData>
</For>
</For>

<!---END DEFINE OWNERS AND USERS OF SHARED DATA-->

<!---OBJECTIVE FUNCTION STAGE-->
<Stage>
  
  <Name>ObjFuncEvaluation</Name>
  <For var="I" in="Comms">
  <For var="J" in="Evals">
  <Input>
    <SharedDataName>Control {I*NumEvals+J}</SharedDataName>
  </Input>
  </For>
  </For>

  <For var="J" in="Evals">
  <Operation>
    
    <For var="I" in="Comms">
    <Operation>
    <PerformerName>Proxy_{I}</PerformerName>
    <Name>ObjFuncEval</Name>
    <Input>
      <ArgumentName>Particle</ArgumentName>
      <SharedDataName>Control {I*NumEvals+J}</SharedDataName>
    </Input>
    <Output>
      <ArgumentName>ObjFuncVal</ArgumentName>
      <SharedDataName>ObjFuncValue {I*NumEvals+J}</SharedDataName>
    </Output>
    </Operation>
    </For>

  </Operation>
  </For>
  
  <For var="I" in="Comms">
  <For var="J" in="Evals">
  <Output>
    <SharedDataName>ObjFuncValue {I*NumEvals+J}</SharedDataName>
  </Output>
  </For>
  </For>
  
</Stage>
<!---END OBJECTIVE FUNCTION STAGE-->

<!---CONSTRAINT STAGE-->
<Stage>
  
  <Name>ConstraintEvaluation</Name>
  <For var="I" in="Comms">
  <For var="J" in="Evals">
  <Input>
    <SharedDataName>Control {I*NumEvals+J}</SharedDataName>
  </Input>
  </For>
  </For>

  <For var="J" in="Evals">
  <Operation>
    
    <For var="I" in="Comms">
    <Operation>
    <PerformerName>Proxy_{I}</PerformerName>
    <Name>ConstraintEval</Name>
    <Input>
      <ArgumentName>Particle</ArgumentName>
      <SharedDataName>Control {I*NumEvals+J}</SharedDataName>
    </Input>
    <Output>
      <ArgumentName>ConstraintVal</ArgumentName>
      <SharedDataName>ConstraintValue {I*NumEvals+J}</SharedDataName>
    </Output>
    </Operation>
    </For>

  </Operation>
  </For>
  
  <For var="I" in="Comms">
  <For var="J" in="Evals">
  <Output>
    <SharedDataName>ConstraintValue {I*NumEvals+J}</SharedDataName>
  </Output>
  </For>
  </For>
  
</Stage>
<!---END CONSTRAINT STAGE-->

<!---SET OPTIMIZER'S OPTIONS-->
<Optimizer>
  <Package>ALPSO</Package>
  <Options>
    <NumParticles>{NumParticles}</NumParticles>
    <OutputSolution>true</OutputSolution>
    <OutputDiagnosticsToFile>true</OutputDiagnosticsToFile>
  </Options>
  <Objective>
    <ValueStageName>ObjFuncEvaluation</ValueStageName> <!---NEEDS TO MATCH USER-DEFINED STAGE NAME FOR THE OBJECTIVE FUNCTION STAGE-->
  </Objective>
  <Constraint>
    <ValueStageName>ConstraintEvaluation</ValueStageName> <!---NEEDS TO MATCH USER-DEFINED STAGE NAME FOR THE CONSTRAINT STAGE-->
    <ReferenceValue>1.0</ReferenceValue> <!---THE REFERENCE VALUE IS DEFINED AS (H(X) / ALPHA) - BETA, WHERE ALPHA IS THE REFERENCE VALUE. DEFAULT = 1.0 IF NOT DEFINED-->
    <TargetValue>0.0</TargetValue> <!---THE TARGET VALUE IS DEFINED AS (H(X) / ALPHA) - BETA, WHERE BETA IS THE TARGET VALUE. DEFAULT = 0.0 IF NOT DEFINED-->
  </Constraint>
  <BoundConstraint>
    <For var="I" in="Dims">
      <Upper>5</Upper>
    </For>
    <For var="I" in="Dims">
      <Lower>-5</Lower>
    </For>
  </BoundConstraint>
</Optimizer>
