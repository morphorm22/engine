<ParameterList name="Problem">
  <Parameter name="Physics" type="string" value="Plato Driver"/>
  <Parameter  name="Spatial Dimension"    type="int"    value="3"/>

  <Parameter name="Input Mesh" type="string" value="./bolted_bracket.osh"/>

  <ParameterList  name="Associations">
    <Parameter name="File" type="string" value="./bolted_bracket_assoc.txt"/>
  </ParameterList>
  
  <ParameterList name="Plato Problem">
    <Parameter name="Physics"            type="string"  value="Thermal"/>
    <Parameter name="PDE Constraint"     type="string"  value="Heat Equation"/>
    <Parameter name="Linear Constraint"  type="string"  value="Volume"/>
    <Parameter name="Objective"          type="string"  value="Internal Thermal Energy"/>

    <Parameter name="Self-Adjoint"       type="bool"    value="false"/>

    <ParameterList name="Volume">
      <ParameterList name="Penalty Function">
        <Parameter name="Type" type="string" value="SIMP"/>
        <Parameter name="Exponent" type="double" value="1.0"/>
        <Parameter name="Minimum Value" type="double" value="0.0"/>
      </ParameterList>
    </ParameterList>

    <ParameterList name="Internal Thermal Energy">
      <ParameterList name="Penalty Function">
        <Parameter name="Type" type="string" value="SIMP"/>
        <Parameter name="Exponent" type="double" value="3.0"/>
        <Parameter name="Minimum Value" type="double" value="1.0e-3"/>
      </ParameterList>
    </ParameterList>

    <ParameterList name="Time Integration">
      <Parameter name="Number Time Steps" type="int" value="10"/>
      <Parameter name="Time Step" type="double" value="10000.0"/>
    </ParameterList>

    <ParameterList name="Heat Equation">
      <ParameterList name="Penalty Function">
        <Parameter name="Type" type="string" value="SIMP"/>
        <Parameter name="Exponent" type="double" value="3.0"/>
        <Parameter name="Minimum Value" type="double" value="1.0e-3"/>
      </ParameterList>
    </ParameterList>

    <ParameterList  name="Computed Fields">
      <ParameterList  name="Initial Temperature">
        <Parameter  name="Function" type="string"   value="100.0"/>
      </ParameterList>
    </ParameterList>

    <ParameterList  name="Initial Temperature">
      <Parameter  name="Computed Field" type="string" value="Initial Temperature"/>
    </ParameterList>

    <ParameterList name="Material Model">
      <ParameterList name="Isotropic Linear Thermal">
        <Parameter  name="Conductivity Coefficient" type="double" value="210.0"/>
        <Parameter  name="Mass Density" type="double" value="2703.0"/>
        <Parameter  name="Specific Heat" type="double" value="900.0"/>
      </ParameterList>
    </ParameterList>
  
    <ParameterList  name="Natural Boundary Conditions">
      <ParameterList  name="Traction Vector Boundary Condition">
        <Parameter  name="Type"     type="string"   value="Uniform"/>
        <Parameter  name="Value"    type="double"   value="-1.0e7"/>
        <Parameter  name="Sides"    type="string"   value="ss_2"/>
      </ParameterList>
    </ParameterList>
<!--
    <ParameterList  name="Essential Boundary Conditions">
      <ParameterList  name="Fixed Temperature Boundary Condition">
        <Parameter  name="Type"     type="string" value="Fixed Value"/>
        <Parameter  name="Value"    type="double" value="-100.0"/>
        <Parameter  name="Sides"    type="string" value="ns_1"/>
      </ParameterList>
    </ParameterList>
-->
  </ParameterList>

</ParameterList>
